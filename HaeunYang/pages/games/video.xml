	<equipment>
	  <equipName>Tablet</equipName>
	  <extraCost>300</extraCost>
	</equipment>
	<equipment>
	  <equipName>Internet</equipName>
	</equipment>
	<platform>&Web;</platform>
	<platform>&PC;</platform>
	<platform>&Mob;</platform>
