<!DOCTYPE categories [
<!ELEMENT categories (video*,tabletop*)>
<!ELEMENT video (name,desc,genre+,pub*,player,subject,grade,search*,cost?,equipment+,platform*,review*,picture+,url)>
	<!ATTLIST video game_name CDATA #REQUIRED>
 <!ELEMENT name (#PCDATA)>
 <!ELEMENT desc (#PCDATA)>
 <!ELEMENT genre (#PCDATA)>
 <!ELEMENT pub (#PCDATA)>
 <!ELEMENT player (#PCDATA)>
	<!ATTLIST player mode (single|multi) #REQUIRED>
 <!ELEMENT subject (#PCDATA)>
 <!ELEMENT grade (#PCDATA)>
 <!ELEMENT search (#PCDATA)>
 <!ELEMENT cost (#PCDATA)>
 <!ELEMENT equipment (equipName,extraCost?)>
 <!ELEMENT equipName (#PCDATA)>
 <!ELEMENT extraCost (#PCDATA)>
 <!ELEMENT platform (#PCDATA)> 
	<!ENTITY Web "Web browser">
	<!ENTITY PC "Microsoft Windows, MacOS">
	<!ENTITY Mob "Android, iOS">
 <!ELEMENT review (#PCDATA)>
	<!ATTLIST review star (0|1|2|3|4|5) #REQUIRED>
 <!ELEMENT picture (#PCDATA)>
 <!ELEMENT url (#PCDATA)>
<!ELEMENT tabletop (name,desc,genre+,pub*,player, playTime?,subject,grade,search*,cost?,equipment+,review*,picture+,url)>
	<!ATTLIST tabletop game_name CDATA #REQUIRED>
 <!ELEMENT playTime (#PCDATA)>
	<!ENTITY BG "Board game product">
]>

<categories>
